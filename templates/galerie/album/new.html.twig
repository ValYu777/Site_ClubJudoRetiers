{% extends 'base.html.twig' %}

{% block title %}Créer un Album{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item">Services</li>
            <li class="breadcrumb-item active" aria-current="page">Galerie</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
<h1>Créer un nouvel album</h1>

{{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.description) }}
    <button class="btn btn-success mt-3">Enregistrer</button>
{{ form_end(form) }}

<a href="{{ path('admin_galerie_index') }}" class="btn btn-secondary mt-3">Retour à la galerie</a>
{% endblock %}
