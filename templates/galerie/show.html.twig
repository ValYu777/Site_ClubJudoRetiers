{# templates/galerie/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ album.nom }}{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item">Services</li>
            <li class="breadcrumb-item active" aria-current="page">Galerie</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
  <h1>{{ album.nom }}</h1>
  
  {% if album.description %}
    <p>{{ album.description }}</p>
  {% endif %}

  <h2>Photos</h2>

  <div class="row">
    {% for photo in photos %}
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="{{ asset(photo.imagePath) }}" class="card-img-top" alt="{{ photo.titre }}">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ photo.titre }}</h5>

            {% if is_granted('ROLE_ADMIN') %}
              <div class="mt-auto">
                <form method="post" action="{{ path('admin_photo_delete', { id: photo.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette photo ?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
                  <button class="btn btn-danger btn-sm mt-2">Supprimer</button>
                </form>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% else %}
      <p>Aucune photo dans cet album.</p>
    {% endfor %}
  </div>
   <h3>Ajouter une photo</h3>
    {{ form_start(form) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.imageFile) }}
        <button class="btn btn-success">Ajouter</button>
    {{ form_end(form) }}

    <a href="{{ path('galerie') }}" class="btn btn-secondary mt-4">Retour à la galerie</a>
{% endblock %}
