<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue au Club de Judo{% endblock %}</title>
    <link rel="icon" href="/images/logo_judo.png">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- AOS (Animate On Scroll) -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    
    <style>
        /* Menu déroulant au survol */
        .navbar .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }

        .dropdown-menu {
            transition: all 0.3s ease-in-out;
        }

        .navbar {
            background-color: #1e1e2f;
        }

        .navbar .nav-link,
        .navbar-brand {
            color: #fff !important;
        }

        .navbar .dropdown-menu {
            background-color: #2e2e42;
        }

        .dropdown-item {
            color: #fff;
        }

        .dropdown-item:hover {
            background-color: #b3001b;
        }

        footer {
            background-color: #1e1e2f;
            color: #ccc;
            padding: 30px 0;
            margin-top: 50px;
        }

        footer a {
            color: #ccc;
        }

        footer a:hover {
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>
<main class="flex-grow-1" style="padding-top: 100px;" data-aos="fade-up">
    {% block breadcrumb %}{% endblock %}


<body>
<div class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="{{ path('home') }}">
                <img src="/images/logo_judo.png" alt="Logo" width="60" class="me-2">
                <span class="fw-bold text-uppercase">Club de Judo</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#">Disciplines</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('judo') }}">Judo</a></li>
                            <li><a class="dropdown-item" href="{{ path('taiso') }}">Taiso</a></li>
                            <li><a class="dropdown-item" href="{{ path('jujitsu') }}">Ju-Jitsu / Self-défense</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#">Services</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('planning') }}">Planning</a></li>
                            <li><a class="dropdown-item" href="{{ path('horaires') }}">Horaires</a></li>
                            <li><a class="dropdown-item" href="{{ path('boutique') }}">Boutique</a></li>
                            <li><a class="dropdown-item" href="{{ path('inscription') }}">Inscription</a></li>
                            <li><a class="dropdown-item" href="{{ path('galerie') }}">Galerie</a></li>
                            <li><a class="dropdown-item" href="{{ path('resultats') }}">Résultats</a></li>
                        </ul>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="bi bi-person-circle me-1"></i> Bonjour {{ app.user.email }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right"></i> Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenu principal -->
    <main class="flex-grow-1" style="padding-top: 100px;" data-aos="fade-up">
        {% block body %} {% endblock %}
    </main>

    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p><strong>Club de Judo</strong> - Tous droits réservés © {{ "now"|date("Y") }}</p>
            <p>
                <a href="{{ path('home') }}">Accueil</a> |
                {# <a href="{{ path('contact') }}">Contact</a> #} |
                {# <a href="{{ path('mentions_legales') }}">Mentions légales</a> #}
            </p>
            <div>
                <a href="#"><i class="bi bi-facebook me-2"></i></a>
                <a href="#"><i class="bi bi-instagram me-2"></i></a>
                <a href="#"><i class="bi bi-envelope-fill"></i></a>
            </div>
        </div>
    </footer>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init();
</script>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>
</main>
</html>
