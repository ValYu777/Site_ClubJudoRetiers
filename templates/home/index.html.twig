{% extends 'base.html.twig' %}

{% block title %}Bienvenue au Club de Judo{% endblock %}

{% block stylesheets %}
    <style>
        .page-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 40px;
            gap: 40px;
            flex-wrap: wrap;
        }

        #calendar {
            max-width: 600px;
            flex: 1;
        }

        .sidebar {
            display: flex;
            flex-direction: column;
            gap: 25px;
            max-width: 350px;
            width: 100%;
        }

        .sidebar-item {
            position: relative;
            width: 100%;
            height: 180px;
            border-radius: 16px;
            overflow: hidden;
            text-decoration: none;
            color: white;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }

        .sidebar-item:hover {
            transform: scale(1.03);
        }

        .sidebar-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .sidebar-item span {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 12px;
            background: rgba(0, 0, 0, 0.5);
            font-size: 20px;
            font-weight: bold;
            text-align: center;
        }

        .example-wrapper h1 {
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Accueil</li>
        </ol>
    </nav>
{% endblock %}


{% block body %}
    <div class="example-wrapper">
        <h1>Bienvenue sur le site du club de judo</h1>

        <div class="page-container">
            <!-- Calendrier -->
            <div id="calendar"></div>

            <!-- Liens rapides -->
            <div class="sidebar">
                <a href="{{ path('horaires') }}" class="sidebar-item">
                    <img src="/images/logo_judo.png" alt="Horaires">
                    <span>Horaires</span>
                </a>
                <a href="{{ path('inscription') }}" class="sidebar-item">
                    <img src="/images/logo_judo.png" alt="Inscription">
                    <span>Inscription</span>
                </a>
                <a href="{{ path('galerie') }}" class="sidebar-item">
                    <img src="/images/logo_judo.png" alt="Galerie">
                    <span>Galerie</span>
                </a>
                <a href="{{ path('boutique') }}" class="sidebar-item">
                    <img src="/images/logo_judo.png" alt="Boutique">
                    <span>Boutique</span>
                </a>
            </div>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div style="text-align: center; margin-top: 20px;">
                <a href="{{ path('admin_evenement_index') }}" class="btn btn-primary">Gérer les événements</a>
            </div>
        {% endif %}
    </div>
{% endblock %}

