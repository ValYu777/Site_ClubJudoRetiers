{% extends 'base.html.twig' %}

{% block title %}Opération - {{ operation.nom }}{% endblock %}

{% block breadcrumb %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent px-3">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
        <li class="breadcrumb-item">Services</a></li>
        <li class="breadcrumb-item"><a href="{{ path('operation_index') }}">Opérations</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ operation.nom }}</li>
    </ol>
</nav>
{% endblock %}


{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0">
                {% if operation.imagePath %}
                    <div class="card-img-top img-fluid operation-banner" style="background-image: url('{{ asset('uploads/operations/' ~ operation.imagePath) }}');">
                    </div>
                {% else %}
                    <div class="card-img-top d-flex align-items-center justify-content-center operation-banner bg-light text-muted">
                        <span>Aucune image disponible</span>
                    </div>
                {% endif %}

                <div class="card-body">
                    <h2 class="card-title mb-3 text-primary">{{ operation.nom }}</h2>
                    <p class="card-text mb-4">{{ operation.description }}</p>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">
                            <strong>Date de début :</strong> {{ operation.dateDebut|date('d/m/Y') }}
                        </li>
                        <li class="list-group-item">
                            <strong>Date de fin :</strong> {{ operation.dateFin|date('d/m/Y') }}
                        </li>
                        {% if operation.url %}
    <li class="list-group-item">
        <strong>Lien :</strong> <a href="{{ operation.url }}" target="_blank" rel="noopener">{{ operation.url }}</a>
    </li>
{% endif %}

                    </ul>

                    <div class="text-end">
                        <a href="{{ path('operation_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .operation-banner {
            height: 300px;
            background-size: cover;
            background-position: center;
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }

        .card-title {
            font-size: 1.75rem;
            font-weight: 600;
        }

        .list-group-item {
            font-size: 1rem;
        }

        .btn-outline-secondary {
            border-radius: 25px;
        }
    </style>
{% endblock %}
