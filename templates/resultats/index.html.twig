{% extends 'base.html.twig' %}

{% block title %}Résultats des compétitions{% endblock %}


{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item">Services</li>
            <li class="breadcrumb-item active" aria-current="page">Résultats</li>
        </ol>
    </nav>
{% endblock %}


{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Résultats des compétitions</h1>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Compétition</th>
                <th>Compétiteur</th>
                <th>Résultat</th>
            </tr>
        </thead>
        <tbody>
            {% for resultat in resultats %}
                <tr>
                    <td>{{ resultat.competition }}</td>
                    <td>{{ resultat.competiteur }}</td>
                    <td>{{ resultat.resultat }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucun résultat pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
            <div style="text-align: center; margin-top: 20px;">
                <a href="{{ path('admin_resultat_index') }}" class="btn btn-primary">Gérer les résultats</a>
            </div>
    {% endif %}
</div>
{% endblock %}
